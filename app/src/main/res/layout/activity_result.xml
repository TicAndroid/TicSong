<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_base">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_star" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_spot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@drawable/boom_upstair"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="42"
                android:background="#77000000"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="58"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/score_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/score_100" />

                <ImageView
                    android:id="@+id/score_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/score_100" />

                <ImageView
                    android:id="@+id/score_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/score_100" />

                <ImageView
                    android:id="@+id/score_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/score_100" />

                <ImageView
                    android:id="@+id/score_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/score_100" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80">

            <LinearLayout
                android:id="@+id/lvl_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="38"
                    android:background="@drawable/background_lvlup" />

            </LinearLayout>

            <ImageView
                android:id="@+id/boom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/boom_downstair"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88"
                        android:background="@drawable/score_panel"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7" />

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="250"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="47">

                        <ImageView
                            android:id="@+id/lvl_up_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/lvl_up"
                            android:visibility="gone" />

                        <ImageView android:id="@+id/profile_img"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/profile_main_image" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="8"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lv. "
                        android:textColor="#FFFFFF"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/profile_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:max="100"
                    android:padding="15dp"
                    android:progress="40"
                    android:progressDrawable="@drawable/custom_progress" />

                <RelativeLayout
                    android:id="@+id/item_gift"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/item2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/item_onemore" />

                    <ImageView
                        android:id="@+id/item_gift_badge"
                        android:layout_width="25dp"
                        android:layout_height="36dp"
                        android:layout_alignEnd="@id/item2"
                        android:layout_alignRight="@id/item2"
                        android:layout_alignTop="@id/item2"
                        android:background="@drawable/badge_gift"
                        android:gravity="center"
                        android:paddingEnd="8dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="8dp"
                        android:paddingTop="6dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_main"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_home" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/btn_share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_share" />

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</FrameLayout>