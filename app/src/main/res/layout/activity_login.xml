<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ani_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_background" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center">

            <com.facebook.login.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_button"
                style="@style/FacebookLoginButton"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_facebook_sign_in_button"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:textStyle="normal"
                android:gravity="center"
                fb:com_facebook_login_text="Log in with Facebook"
                fb:com_facebook_logout_text="Log out with Facebook" />


        </LinearLayout>
    </LinearLayout>


</FrameLayout>