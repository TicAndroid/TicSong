<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:focusableInTouchMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/background_test" />
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_back1"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/first_part"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/firstbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="6"
                android:background="@drawable/com_facebook_close" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80" />

            <ImageButton
                android:id="@+id/btn_pass"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="11"
                android:background="@drawable/pass" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/msg_part"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#22000000">

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="메시지 출력 부분!"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_play"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/star_30" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:background="#33000000"
                        android:gravity="center"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:id="@+id/item_box"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="80"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/item1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/star_60" />

                            <TextView
                                android:id="@+id/item1_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/item1"
                                android:layout_alignRight="@id/item1"
                                android:layout_alignTop="@id/item1"
                                android:background="@drawable/badge_item_count"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="0"
                                android:textColor="#000000"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/item2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/star_60" />

                            <TextView
                                android:id="@+id/item2_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/item2"
                                android:layout_alignRight="@id/item2"
                                android:layout_alignTop="@id/item2"
                                android:background="@drawable/badge_item_count"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="99"
                                android:textColor="#000000"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/item3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/star_60" />

                            <TextView
                                android:id="@+id/item3_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/item3"
                                android:layout_alignRight="@id/item3"
                                android:layout_alignTop="@id/item3"
                                android:background="@drawable/badge_item_count"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="12"
                                android:textColor="#000000"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/item4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/star_60" />

                            <TextView
                                android:id="@+id/item4_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/item4"
                                android:layout_alignRight="@id/item4"
                                android:layout_alignTop="@id/item4"
                                android:background="@drawable/badge_item_count"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="10"
                                android:textColor="#000000"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8" />


                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="49dp" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="85" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/life1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/start_heart" />

                        <ImageView
                            android:id="@+id/life2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/start_heart" />

                        <ImageView
                            android:id="@+id/life3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/start_heart" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/frame_ans"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:background="@color/material_blue_grey_90"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:weightSum="100">

            <EditText
                android:id="@+id/edit_ans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="@drawable/edix_style"
                android:ems="12"
                android:gravity="center_vertical"
                android:hint="정답을 입력하세요!"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12">

                <ImageButton
                    android:id="@+id/btn_voice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_record_style"
                    android:src="@drawable/a_mic"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_send_style"
                    android:text="Send"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#66000000">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="bottom"
            android:background="#FFF"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_voice_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_voice_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="연결 중입니다. 아직 말하지 마세요!"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/record_pan"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/a_record" />

            </LinearLayout>
        </FrameLayout>

    </FrameLayout>


</FrameLayout>
