<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_base"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_x"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="130dp"
                android:layout_height="24dp"
                android:background="@drawable/txt_setting"/>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="74"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="95"
                android:layout_marginTop="7dp"
                android:background="#33000033"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:weightSum="10"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:gravity="center_vertical"
                        android:text="배경음 설정"
                        android:textSize="20sp"
                        android:textColor="#99FFFFFF"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"/>

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="26dp"
                        android:background="@drawable/btn_on"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaFFFFFF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:weightSum="10"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:gravity="center_vertical"
                        android:text="효과음 설정"
                        android:textSize="20sp"
                        android:textColor="#99FFFFFF"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"/>

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="26dp"
                        android:background="@drawable/btn_off"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#55000033"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="74"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="TUTORIAL"
                        android:textColor="#aaffffff"
                        android:background="#00000000"
                        android:textSize="21sp"/>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="#ffffff"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="정보 이용 약관"
                        android:textColor="#aaffffff"
                        android:background="#00000000"
                        android:textSize="21sp"/>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="#ffffff"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="개인 정보"
                        android:textColor="#aaffffff"
                        android:background="#00000000"
                        android:textSize="21dp"/>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="#ffffff"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="문의하기"
                        android:textColor="#aaffffff"
                        android:background="#00000000"
                        android:textSize="21sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="19"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="LOG OUT"
                android:textColor="#000099"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="#00000000"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="계정 탈퇴"
                android:textColor="#000099"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="#00000000"/>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>