<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:centerColor="#25223d"
                android:endColor="#25223d"
                android:startColor="#25223d"
                />
            <stroke android:width="1dp" android:color="#ffffff"/>
            <padding android:left="2dp" android:top="2dp"
                android:right="2dp" android:bottom="2dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:startColor="#ffd655"
                    android:centerColor="#ffd655"
                    android:endColor="#ffd655"

                    />
                <stroke android:width="1dp" android:color="#25223d"/>

            </shape>
        </clip>
    </item>
</layer-list>